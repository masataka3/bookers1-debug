<div class="col-xs-9">
	  <h2>Books</h2>
	  <table class="table table-hover table-inverse">
	    <thead>
		  <tr>
		    <th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="5"></th>
		  </tr>
		</thead>
		  <tbody>
		    <% @books.each do |book| %>
			  <tr>
			    <td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
			    <td><%= book.body %></td>
				</tr>
				<% end %>
		</tbody>
	  </table>
	</div>
  </div>